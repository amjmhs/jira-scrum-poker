<?xml version="1.0" encoding="UTF-8"?>
<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">

    <!-- plugin coordinates -->

    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <param name="plugin-icon">images/scrum-poker-logo-16.png</param>
        <param name="plugin-logo">images/scrum-poker-logo-144.png</param>
        <param name="configure.url">/secure/admin/scrumPokerConfiguration.jspa</param>
    </plugin-info>

    <!-- i18n message bundle -->

    <resource type="i18n" name="i18n" location="scrum-poker"/>

    <!-- static web resources -->

    <web-resource key="scrum-poker-resources" name="Scrum Poker Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="scrum-poker.css" location="/css/scrum-poker.css"/>
        <resource type="download" name="scrum-poker.js" location="/js/scrum-poker.js"/>
        <resource type="download" name="mustache.min.js" location="/js/mustache.min.js"/>
        <resource type="download" name="images/" location="/images"/>
        <context>scrum-poker</context>
    </web-resource>

    <!-- imported components -->

    <component-import key="pluginSettingsFactory"
                      interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory"/>
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties"/>

    <!-- components -->

    <component key="scrumPokerStorage" class="de.codescape.jira.plugins.scrumpoker.data.DefaultScrumPokerStorage">
        <description>Provides the Storage for Scrum Poker sessions.</description>
        <interface>de.codescape.jira.plugins.scrumpoker.data.ScrumPokerStorage</interface>
    </component>

    <component key="storyPointSupport" class="de.codescape.jira.plugins.scrumpoker.data.DefaultStoryPointSupport">
        <description>Provides access to the custom field.</description>
        <interface>de.codescape.jira.plugins.scrumpoker.data.StoryPointFieldSupport</interface>
    </component>

    <component key="scrumPokerSettings" class="de.codescape.jira.plugins.scrumpoker.data.DefaultScrumPokerSettings">
        <description>Provides the settings accessor for the Scrum Poker plugin.</description>
        <interface>de.codescape.jira.plugins.scrumpoker.data.ScrumPokerSettings</interface>
    </component>

    <!-- buttons to start a new session -->

    <web-item key="pp_start" name="PP-Start" section="jira.issue.tools" weight="10">
        <label key="scrumpoker.session.start"/>
        <link linkId="callPP">/secure/scrumPoker.jspa?issueKey=$issue.key</link>
        <condition class="de.codescape.jira.plugins.scrumpoker.StoryTypeCondition"/>
    </web-item>

    <web-item key="pp_start_agile" name="PP-Start" section="operations-top-level" weight="10">
        <label key="scrumpoker.session.start"/>
        <link linkId="callPP">/secure/scrumPoker.jspa?issueKey=$issue.key</link>
        <condition class="de.codescape.jira.plugins.scrumpoker.StoryTypeCondition"/>
    </web-item>

    <!-- dropdown on boards -->

    <web-section key="scrumpoker_sessions" location="jira.agile.board.tools" weight="10">
        <label key="scrumpoker.title">Scrum Poker</label>
    </web-section>

    <web-item section="scrumpoker_sessions" key="my-custom-web-item" weight="10">
        <label key="scrumpoker.sessions.list">Scrum Poker Sitzungen</label>
        <link>/secure/scrumPokerSessions.jspa</link>
    </web-item>

    <!-- webworks -->

    <webwork1 key="scrum-poker-webwork" name="Scrum Poker">
        <actions>
            <action name="de.codescape.jira.plugins.scrumpoker.action.ConfigureScrumPokerAction"
                    alias="scrumPokerConfiguration" roles-required="sysadmin">
                <view name="success">/templates/configuration.vm</view>
            </action>
            <action name="de.codescape.jira.plugins.scrumpoker.action.ShowSessionsAction" alias="scrumPokerSessions"
                    roles-required="use">
                <view name="success">/templates/sessions.vm</view>
            </action>
            <action name="de.codescape.jira.plugins.scrumpoker.action.ShowScrumPokerAction" alias="scrumPoker"
                    roles-required="use">
                <view name="success">/templates/show.vm</view>
                <view name="error">/templates/error.vm</view>
            </action>
        </actions>
    </webwork1>

    <!-- rest endpoint -->

    <rest name="Scrum Poker" i18n-name-key="scrumpoker.title" key="scrumpoker" path="/scrumpoker" version="1.0"/>

</atlassian-plugin>
